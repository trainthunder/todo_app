<div id="<%= dom_id(task) %>" class="flex items-center justify-between bg-white rounded shadow px-4 py-2">
  <div class="flex items-center gap-3">
    <%= button_to task.completed ? "✅" : "⬜", toggle_task_path(task), method: :patch, form: { data: { turbo_stream: true }, class: "inline" } %>
    <span class="<%= task.completed ? 'line-through text-gray-500' : '' %>">
      <%= task.title %>
    </span>
  </div>
  <%= button_to "❌", task_path(task), method: :delete, form: { data: { turbo_stream: true }, class: "inline" }, class: "text-red-500 hover:text-red-700" %>
</div>
